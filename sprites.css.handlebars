{{#sprites}}
/* ICON {{name}} */

@mixin ic-{{name}}() {
    background-position: {{px.offset_x}} {{px.offset_y}} !important;
}

@mixin ic-{{name}}-mixin() {
    display: block;
    width: {{px.width}};
    height: {{px.height}};
    background-image: url(../images/{{{escaped_image}}});
    background-position: {{px.offset_x}} {{px.offset_y}};
    flex-shrink: 0;
}

.ic-{{name}} {
    display: block;
    width: {{px.width}};
    height: {{px.height}};
    background-image: url(../images/{{{escaped_image}}});
    background-position: {{px.offset_x}} {{px.offset_y}};
    flex-shrink: 0;
}
{{/sprites}}

{{#retina_sprites}}
@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
    @mixin ic-{{name}}-mixin() {
        background-image: url(../images/{{{escaped_image}}});
        background-size: {{px.width}} {{px.height}};
        background-position: {{px.offset_x}} {{px.offset_y}};
    }

    .ic-{{name}} {
        background-image: url(../images/{{{escaped_image}}});
        background-size: {{px.width}} {{px.height}};
        background-position: {{px.offset_x}} {{px.offset_y}};
    }
}
{{/retina_sprites}}
